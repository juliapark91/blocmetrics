<%= content_tag_for :div, event, class: "row" do %>
  <div>
    <h3>
      <%= link_to "#{event.name}", event, class:'button-space' %>
      <% if policy(event).destroy? %>
        <%= link_to "Delete", event, method: :delete, remote: true, class: 'btn btn-xs btn-danger'%>
      <% end %>
    </h3>
  </div> 
<% end %>